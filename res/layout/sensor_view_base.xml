<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llSensorView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/head_photo_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/SvbTvTitlePadding"
        android:text="@string/SvbTvTitleText"
        android:textSize="@dimen/SvbTvTitleTextSize"
	    android:textColor="@color/sensor_title_text"
	    android:background="@color/sensor_title" />
    
    <LinearLayout 
        android:id="@+id/llContain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
        
        <ImageButton
            android:id="@+id/ibIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@null" />
        
        <TextView 
            android:id="@+id/tvSensorData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/SvbTvDataPadding"
            android:text="@string/SvbTvDataText"
            android:textSize="@dimen/SvbTvDataTextSize"
	        android:textColor="@color/sensor_data_text"
	        android:background="@color/sensor_data" />
        
    </LinearLayout>

</LinearLayout>
