<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_data_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvNo"
                style="@style/styleListviewTitle"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="序号" />

            <TextView
                android:id="@+id/tvSensorType"
                style="@style/styleListviewTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="传感器类型" />

            <TextView
                android:id="@+id/tvCna"
                style="@style/styleListviewTitle"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="节点地址" />

            <TextView
                android:id="@+id/tvCieee"
                style="@style/styleListviewTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="节点IEEE地址" />

            <TextView
                android:id="@+id/tvPna"
                style="@style/styleListviewTitle"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="父节点地址" />

            <TextView
                android:id="@+id/tvPieee"
                style="@style/styleListviewTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="父节点IEEE地址" />

        </LinearLayout>

        <ListView
            android:id="@+id/lvNodeInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:divider="#FF101010"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:footerDividersEnabled="false"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll"
            android:layoutAnimation="@anim/list_anim_layout_right" />
    </LinearLayout>

</HorizontalScrollView>