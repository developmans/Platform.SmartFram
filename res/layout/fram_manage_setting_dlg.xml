<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:boxlab="http://schemas.android.com/apk/res/com.boxlab.trainingplatform"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_login_layout"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal" >
        <!-- 使用自定义旋转图 -->

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:indeterminateDrawable="@drawable/progressbar_anim" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动控制参数设置"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:text="温度上限"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <com.boxlab.view.VerticalSeekBar
                android:id="@+id/vsbTup"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:progress="250"
                android:max="500" />

            <TextView
                android:id="@+id/tvTup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.0"
                android:textColor="@color/white"
                android:textSize="24sp" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:text="温度下限"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <com.boxlab.view.VerticalSeekBar
                android:id="@+id/vsbTdown"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:progress="200"
                android:max="500" />

            <TextView
                android:id="@+id/tvTdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="20.0"
                android:textColor="@color/white"
                android:textSize="24sp" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:text="湿度上限"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <com.boxlab.view.VerticalSeekBar
                android:id="@+id/vsbHup"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:progress="650"
                android:max="1000" />

            <TextView
                android:id="@+id/tvHup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="65.0"
                android:textColor="@color/white"
                android:textSize="24sp" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:text="湿度下限"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <com.boxlab.view.VerticalSeekBar
                android:id="@+id/vsbHdown"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:progress="400"
                android:max="1000" />

            <TextView
                android:id="@+id/tvHdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40.0"
                android:textColor="@color/white"
                android:textSize="24sp" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:text="浓度上限"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <com.boxlab.view.VerticalSeekBar
                android:id="@+id/vsbCup"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:progress="1000"
                android:max="5000" />

            <TextView
                android:id="@+id/tvCup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="@color/white"
                android:textSize="24sp" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:text="浓度下限"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <com.boxlab.view.VerticalSeekBar
                android:id="@+id/vsbCdown"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:progress="600"
                android:max="5000" />

            <TextView
                android:id="@+id/tvCdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="600"
                android:textColor="@color/white"
                android:textSize="24sp" />
            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>